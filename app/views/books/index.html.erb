<p style="color: green"><%= notice %></p>

<h1>Home Page</h1>


<div class="tasks index">
    <%= link_to "New book", new_book_path, class: 'action new' %>

    <table class="listing" summary="Book List" style="width: 100%;">
        <tr class="header">
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Published Date</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.price %></td>
            <td><%= book.published_date || '-' %></td>
            <td class="actions">
                <%= link_to("Show", book_path(book), class: 'action show') %>
                <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
                <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>